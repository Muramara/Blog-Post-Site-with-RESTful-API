<% if (locals.formData) { %>
    <form action="/edit" method="post">
        <input type="text" name="id" value="<%= formData.id %>" hidden>
        <input type="text" name="title" value="<%= formData.title %>">
        <input type="text" name="content" value="<%= formData.content %>">
        <input type="text" name="author" value="<%= formData.author %>">
        <input type="submit" value="Save" class="edit-btn">
    </form>
<% } %>