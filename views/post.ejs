<header><%- include("partials/header.ejs") %></header>

<div class="post-body-div">
    <% if (locals.posting) { %>
        <div class="post-form">
            <form action="/post" method="post">
                <input type="text" name="title" placeholder="Enter Title..."><br>
                <textarea name="content" placeholder="Enter Content..."></textarea><br>
                <input type="text" name="author" placeholder="Enter Author..."><br>
                <input type="submit" value="Post" class="post-btn btn">
            </form>
        </div>
    <% } %>
    <div>
        <% if (locals.success) { %>
            <p><%= message %></p>
            <a href="/" class="return-btn btn"><button>Back to Homepage</button></a>
        <% } %>
        <% if (locals.failure) { %>
            <p><%= error %></p>
            <a href="/" class="return-btn btn"><button>Back to Homepage</button></a>
        <% } %>
    </div>
</div>